@model Capstone_23_Proteine.Models.Domain.FoodIntake

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this record?</h3>

<div>
    <h4>FoodIntake</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Protein
        </dt>
        <dd class="col-sm-10">
                @Model.Protein
        </dd>

        <dt class="col-sm-2">
            Calories
        </dt>
        <dd class="col-sm-10">
                @Model.Calories
        </dd>

        <dt class="col-sm-2">
            Fat
        </dt>
        <dd class="col-sm-10">
                @Model.Fat
        </dd>

        <dt class="col-sm-2">
            Meal Name
        </dt>
        <dd class="col-sm-10">
                @Model.MealName
        </dd>

        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
                @Model.Date.ToString("dd-MM-yyyy")
        </dd>

    <!-- Add other properties as needed -->
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="MyRecords" class="btn btn-primary">Cancel</a>
    </form>
</div>


